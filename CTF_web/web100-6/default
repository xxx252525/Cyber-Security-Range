server {


    listen 80; 
    root /usr/share/nginx/html;
    index index.php index.html index.htm; 
    
    server_name localhost; 
    location ~ \.php$ {
    include snippets/fastcgi-php.conf;

# With php5-cgi alone:
#fastcgi_pass 127.0.0.1:9000;
# With php5-fpm:
   fastcgi_pass unix:/var/run/php/php7.0-fpm.sock;
   }
}